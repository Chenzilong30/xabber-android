<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/discover_recent_root_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/discover_recent_list_title_root_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expander_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/discover_recent_list_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/expander_height"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#FF9E9E9E"
            android:fontFamily="sans-serif-medium"
            android:text="Recent"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:background="?attr/contact_list_contact_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/discover_recent_list_title_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/expander_height"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="#FF9E9E9E"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:text="@string/clear_history"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discover_recent_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/discover_recent_list_title_root_relative_layout"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>