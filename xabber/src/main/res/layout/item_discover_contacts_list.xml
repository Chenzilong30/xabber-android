<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/discover_contacts_root_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/discover_contact_list_account_color_indicator"
        android:layout_marginTop="1px"
        android:layout_marginBottom="1px"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/amber_700"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/discover_contacts_list_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expander_height"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#FF9E9E9E"
        android:fontFamily="sans-serif-medium"
        android:text="Contacts"
        android:paddingLeft="10dp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_toRightOf="@id/discover_contact_list_account_color_indicator"
        android:background="?attr/contact_list_contact_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discover_contacts_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="2dp"
        android:background="?attr/contact_list_contact_background"
        android:layout_below="@id/discover_contacts_list_title"
        android:layout_toRightOf="@id/discover_contact_list_account_color_indicator"/>

</RelativeLayout>